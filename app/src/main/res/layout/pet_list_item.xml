<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/petListLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/petListImageView"
        android:layout_width="@dimen/image_list_item_width"
        android:layout_height="@dimen/image_list_item_height"
        android:layout_margin="@dimen/image_list_item_margins"
        android:contentDescription="@string/photo"
        app:srcCompat="@drawable/none"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_text_views_margins"
        android:orientation="vertical">

        <TextView
            android:id="@+id/petListNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_view_list_item_buffer"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/dark_blue"
            tools:text="@string/name"/>

        <TextView
            android:id="@+id/petListDetailsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pale_blue"
            tools:text="@string/details"/>
    </LinearLayout>
</LinearLayout>